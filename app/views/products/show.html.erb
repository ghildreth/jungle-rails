<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <dl>
        <dt>Review</dt> <br>
          <dd> <% @product.reviews.each do |r| %> </dd>

          <dd> User: <%= r.user_id %> </dd>
          <dd> ðŸŒŸ Rating: <%= r.rating %> / 5 ðŸŒŸ</dd>
          <dd> Description: <%= r.description %></dd><br>

              <% end %>

      </dl>
</div>
  </article>

</section>
